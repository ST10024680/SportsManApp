<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_background"
    tools:context=".BookingSide">

    <!-- Profile or Logo Image -->
<ImageView
android:id="@+id/imageView2"
android:layout_width="100dp"
android:layout_height="100dp"
android:layout_marginTop="50dp"
android:layout_marginBottom="20dp"
android:scaleType="centerCrop"
android:background="@drawable/circular_background"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/sportsmas_warehouse_logo"
    android:contentDescription="Logo" />

    <!-- Title Text -->
<TextView
android:id="@+id/textView17"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="CUSTOMER BOOKING"
android:textAlignment="center"
android:textColor="@android:color/white"
android:textSize="22sp"
android:textStyle="bold"
app:layout_constraintTop_toBottomOf="@id/imageView2"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Short Welcome Text -->
<TextView
android:id="@+id/textView16"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:text="Welcome! Weâ€™re happy to have you here. Your item will be repaired with the utmost care."
android:textAlignment="center"
android:textColor="@android:color/white"
android:textSize="14sp"
android:padding="16dp"
android:lineSpacingExtra="4dp"
app:layout_constraintTop_toBottomOf="@id/textView17"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Checkboxes for Booking Options -->
<CheckBox
android:id="@+id/checkBoxRac"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Racquet Restringing"
android:textColor="@android:color/white"
android:buttonTint="@android:color/white"
app:layout_constraintTop_toBottomOf="@id/textView16"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

<CheckBox
android:id="@+id/checkBoxBat"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Bat Knocking"
android:textColor="@android:color/white"
android:buttonTint="@android:color/white"
app:layout_constraintTop_toBottomOf="@id/checkBoxRac"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

<CheckBox
android:id="@+id/checkBoxBoth"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Both"
android:textColor="@android:color/white"
android:buttonTint="@android:color/white"
app:layout_constraintTop_toBottomOf="@id/checkBoxBat"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Booking Button with Rounded Blue Design -->
<com.google.android.material.button.MaterialButton
android:id="@+id/btnBooking"
android:layout_width="250dp"
android:layout_height="wrap_content"
android:text="Book Service"
android:textColor="@android:color/white"
app:cornerRadius="25dp"
android:textSize="16sp"
app:backgroundTint="@color/blueAccent"
    app:icon="@drawable/ic_booking_icon"
    app:iconGravity="textStart"
    app:layout_constraintTop_toBottomOf="@id/checkBoxBoth"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="40dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
