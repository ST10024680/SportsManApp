<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#15BBE4"
    tools:context=".ConfirmationSide">

    <!-- Logo Image -->
<ImageView
android:id="@+id/imageView7"
android:layout_width="250dp"
android:layout_height="250dp"
android:layout_marginTop="50dp"
android:layout_marginBottom="20dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:srcCompat="@drawable/sportsmas_warehouse_logo" />

    <!-- Confirmation Title -->
<TextView
android:id="@+id/textView34"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="CONFIRM BOOKING"
android:textAlignment="center"
android:textColor="@android:color/white"
android:textSize="22sp"
android:textStyle="bold"
app:layout_constraintTop_toBottomOf="@id/imageView7"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />


    <!-- Main Confirmation Button -->
<Button
android:id="@+id/btnClickConfirm"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:text="CONFIRM YOUR BOOKING"
android:textAlignment="center"
android:textStyle="bold"
android:textColor="@android:color/white"
android:backgroundTint="#007BFF"
    android:padding="12dp"
    android:layout_marginTop="30dp"
    app:cornerRadius="24dp"
    app:layout_constraintTop_toBottomOf="@id/textView34"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />


    <!-- Return Button -->

    <TextView
        android:id="@+id/textViewConfirm"
        android:layout_width="349dp"
        android:layout_height="149dp"
        android:layout_marginTop="552dp"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="31dp" />

    <Button
android:id="@+id/btnback"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:text="RETURN"
android:textAlignment="center"
android:textStyle="bold"
android:textColor="@android:color/white"
android:backgroundTint="#555555"
    android:padding="12dp"
    android:layout_marginTop="20dp"
    app:cornerRadius="24dp"
    app:layout_constraintTop_toBottomOf="@id/btnClickConfirm"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thank You Message -->
<TextView
android:id="@+id/textView35"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="THANK YOU FOR REQUESTING OUR SERVICE"
android:textAlignment="center"
android:textColor="@android:color/white"
android:textSize="16sp"
android:textStyle="bold|italic"
android:layout_marginTop="30dp"
app:layout_constraintTop_toBottomOf="@id/btnback"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- Footer Text -->
<TextView
android:id="@+id/textView36"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="A LONG LASTING SERVICE"
android:textColor="#E0E0E0"
android:textSize="14sp"
android:textStyle="italic"
app:layout_constraintTop_toBottomOf="@id/textView35"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintVertical_bias="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>
